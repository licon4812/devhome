<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DevHome.PI.Controls.GlowButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Button x:Name="TheButton" Command="{x:Bind Command, Mode=OneWay}" BorderThickness="{x:Bind BorderThickness}">
        <TextBlock 
            x:Name="TheTextBlock" 
            Text="{x:Bind Text}" FontFamily="{x:Bind FontFamily}" FontSize="{x:Bind FontSize}" Foreground="{x:Bind Foreground}"/>
    </Button>
</UserControl>
